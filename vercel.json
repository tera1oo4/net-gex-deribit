{
  "buildCommand": "npm run build",
  "outputDirectory": "dist",
  "framework": "nodejs",
  "functions": {
    "src/**/*.ts": {
      "memory": 1024,
      "maxDuration": 60
    }
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/src/main.js"
    },
    {
      "source": "/(.*)",
      "destination": "/src/main.js"
    }
  ]
}
